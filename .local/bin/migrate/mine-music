#!/bin/sh
# These songs take about 1GB of space

urls="
https://www.youtube.com/watch?v=QAOBbPnI5-g
https://www.youtube.com/watch?v=QBJ1OzMtNwg
https://www.youtube.com/watch?v=aMH7yp1EXw8
"

currentDir=$PWD
dir=$HOME/Music


if ! command -v youtube-dl >/dev/null; then
	printf "Getting youtube-dl\n"
	if command -v curl >/dev/null; then
		cmd="$(curl -L https://yt-dl.org/downloads/latest/youtube-dl)"
	elif command -v wget >/dev/null; then
		cmd="$(wget https://yt-dl.org/downloads/latest/youtube-dl)"
	else
		printf 'Cannot download youtube-dl, curl and wget is not installed...\n'
		exit
	fi
else
	cmd="$(cat $(which youtube-dl))"
fi


[ ! -d "$dir" ] && mkdir --parents "$dir"
cd "$dir"

echo "$urls" | xargs -I {} python -c "$cmd" '{}' -o "./%(title)s.%(ext)s"
cd "$currentDir"
