#!/bin/sh
WM="dwm"

#xrandr --output HDMI-2 --mode 1360x768 --scale 1.2x1.2
xrandr --output DP-1 --mode 1280x1024 --scale 1.2x1.2
setxkbmap -option keypad:pointerkeys &
xset r rate 250 50 &
xrdb ~/.config/X11/Xresources &

export WINIT_X11_SCALE_FACTOR=1

# Turn of screen saver and dpms
xset s off -dpms &
pidof pulseaudio >/dev/null || setsid --fork pulseaudio --start --exit-idle-time=-1
xcompmgr &


case "$WM" in
	"dwm")
		hsetroot -cover "${HOME}"/.local/rice/Wallpapers/Geometry.jpg &

		dwmblocks &
		exec dwm
		;;

	"awesome")
		exec awesome
		;;
esac
